<div class="row">
  <div class="col-sm-7 center box log-in-box">
    <h2 class="page-header">Password Reset</h2>

    <%= form_tag( "/users/password-reset/#{basic_auth_id}/#{token}", { class: 'form-horizontal' } ) do %>
    <fieldset>

      <div class="form-group">
        <%= label_tag :password, 'New Password', { class: 'col-sm-3 control-label', for: 'password' } %>
        <div class="col-sm-7">
          <%= password_field_tag :password, nil, { class: 'form-control input-md', required: '' } %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password_confirmation, 'Confirm Password', { class: 'col-sm-3 control-label', for: 'password' } %>
        <div class="col-sm-7">
          <%= password_field_tag :password_confirmation, nil, { class: 'form-control input-md', required: '' } %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-6">
          <%= submit_tag "Change Password", { class: 'col-sm-6 btn btn-primary' } %>
        </div>
      </div>

    </fieldset>
    <% end %>
  </div>
</div>
