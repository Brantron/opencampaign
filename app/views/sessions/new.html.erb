<div class="row">
  <div class="col-sm-7 center box log-in-box">
    <h2 class="page-header">Log In</h2>
    <%= form_tag( '/auth/identity/callback', { class: 'form-horizontal' } ) do %>
    <fieldset>
      <div class="form-group">
        <%= label_tag :auth_key, 'Email', { class: 'col-sm-2 control-label', for: 'auth_key' } %>
        <div class="col-sm-8">
          <%= text_field_tag :auth_key, params[:auth_key], { placeholder: "@#{ENV['SITE_DOMAIN']}", class: 'form-control input-md', required: '' } %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :password, 'Password', { class: 'col-sm-2 control-label', for: 'password' } %>
        <div class="col-sm-8">
          <%= password_field_tag :password, nil, { class: 'form-control input-md', required: '' } %>
        </div>
      </div>

      <div class="form-group">
        <%= label_tag :submit, '', { class: 'col-sm-2 control-label', for: 'submit' } %>
        <div class="col-sm-10">
          <%= submit_tag "Login", { class: 'col-sm-2 btn btn-primary' } %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password_reset, '', { class: 'col-sm-2 control-label', for: 'password_reset' } %>
        <div class="col-sm-10">
          <p class='password-reset'><%= link_to 'Forgot your password?', forgot_password_path %></p>
        </div>
      </div>
    </fieldset>
    <% end %>
  </div>

  <div class="col-sm-7 center sign-up-text">
    <p class="sign-up center">
      Don't have an account? <%= link_to 'Sign up now', register_path %>.
    </p>
  </div>
</div>
