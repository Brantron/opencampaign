<div class="row">
  <div class="col-md-12">
    <div class="col-md-4 col-md-push-2">
      <h3> Title </h3>
    </div>
    <div class="col-md-4">
      <h3> Position </h3>
    </div>
  </div>
<% @issues.all.each do |issue| %>
  <div class="col-md-12">
    <div class="col-md-4 col-md-push-2">
      <%= issue.title %>
    </div>
    <div class="col-md-4">
      <%= issue.opinion %>
    </div>
  </div>
<% end %>
</div>
