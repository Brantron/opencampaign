<fieldset>
<div class='form-group'>
  <div class='col-sm-12'>
    <%= label_tag :title, 'Title', { class: 'col-sm-3 control-label', for: 'title' } %>
    <%= form.text_field :title, { placeholder: "Position Title", class: 'col-sm-9 form-control input-md', required: '' } %>
  </div>
</div>
<div class="form-group">
  <%= label_tag :position, 'Position', { class: 'col-sm-3 control-label', for: 'opinion' } %>
  <div class="col-sm-9">
    <%= form.text_area :opinion, { placeholder: "Position description", class: 'form-control input-md', required: '' } %>
  </div>
</div>
</fieldset>
