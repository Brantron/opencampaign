<div class="row">
  <div class="col-sm-7 center box">
    <h2 class="page-header">Update Issue</h2>
    <%= form_for(@issue, url: admin_issue_path, method: :put ) do |form| %>
    <fieldset>
      <%= render partial: 'form', locals: { form: form } %>
      <div class="form-group">
        <%= label_tag :submit, '', { class: 'col-sm-3 control-label', for: 'submit' } %>
        <div class="col-sm-9">
          <%= submit_tag "Update Position", { class: 'col-sm-3 btn btn-primary' } %>
        </div>
      </div>
    </fieldset>
    <% end %>
  </div>
</div>
